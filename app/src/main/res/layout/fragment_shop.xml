<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ShopFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/menBtn"
                android:layout_width="412dp"
                android:layout_height="56dp"
                android:background="@color/white"
                android:text="@string/men"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/menCate1"
                android:layout_width="@dimen/dp288"
                android:layout_height="@dimen/dp291"
                android:background="@color/black"
                android:text="@string/jacket"
                app:layout_constraintEnd_toStartOf="@+id/menCate2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menBtn" />

            <Button
                android:id="@+id/menCate2"
                android:layout_width="124dp"
                android:layout_height="346dp"
                android:layout_marginEnd="4dp"
                android:background="@color/white"
                android:text="@string/pants"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/menCate1"
                app:layout_constraintTop_toBottomOf="@+id/menBtn" />

            <Button
                android:id="@+id/menCate3"
                android:layout_width="130dp"
                android:layout_height="248dp"
                android:background="@color/white"
                android:text="@string/t_shirt"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menCate1" />

            <Button
                android:id="@+id/menCate4"
                android:layout_width="154dp"
                android:layout_height="118dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"
                android:background="@color/black"
                android:text="@string/denim"
                app:layout_constraintBottom_toTopOf="@+id/menCate5"
                app:layout_constraintEnd_toStartOf="@+id/menCate2"
                app:layout_constraintStart_toEndOf="@+id/menCate3"
                app:layout_constraintTop_toBottomOf="@+id/menCate1" />

            <Button
                android:id="@+id/menCate5"
                android:layout_width="154dp"
                android:layout_height="130dp"
                android:background="@color/white"
                android:text="@string/coat"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menCate4" />

            <Button
                android:id="@+id/menCate6"
                android:layout_width="124dp"
                android:layout_height="192dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/black"
                android:text="@string/sneaker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/menCate4"
                app:layout_constraintTop_toBottomOf="@+id/menCate2" />

            <Button
                android:id="@+id/womanBtn"
                android:layout_width="412dp"
                android:layout_height="56dp"
                android:background="@color/black"
                android:text="@string/woman"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menCate3" />

            <Button
                android:id="@+id/wmanCate1"
                android:layout_width="@dimen/dp200"
                android:layout_height="@dimen/dp126"
                android:background="@color/white"
                android:text="@string/shirt"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/womanBtn" />

            <Button
                android:id="@+id/wmanCate2"
                android:layout_width="114dp"
                android:layout_height="207dp"
                android:background="@color/black"
                android:text="@string/t_shirt"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/wmanCate1"
                app:layout_constraintTop_toBottomOf="@+id/womanBtn" />

            <Button
                android:id="@+id/wmanCate3"
                android:layout_width="94dp"
                android:layout_height="77dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white"
                android:text="@string/bag"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wmanCate2"
                app:layout_constraintTop_toBottomOf="@+id/womanBtn" />

            <Button
                android:id="@+id/wmanCate4"
                android:layout_width="96dp"
                android:layout_height="206dp"
                android:background="@color/black"
                android:text="@string/shoes"
                app:layout_constraintBottom_toTopOf="@+id/wmanCate7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wmanCate3" />

            <Button
                android:id="@+id/wmanCate5"
                android:layout_width="201dp"
                android:layout_height="319dp"
                android:layout_marginTop="2dp"
                android:background="@color/black"
                android:text="@string/pants"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wmanCate1" />

            <Button
                android:id="@+id/wmanCate6"
                android:layout_width="110dp"
                android:layout_height="77dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/jacket"
                app:layout_constraintEnd_toStartOf="@+id/wmanCate4"
                app:layout_constraintStart_toEndOf="@+id/wmanCate5"
                app:layout_constraintTop_toBottomOf="@+id/wmanCate2" />

            <Button
                android:id="@+id/wmanCate7"
                android:layout_width="208dp"
                android:layout_height="164dp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/swimwear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wmanCate5" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ShopFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/menBtn"
                android:layout_width="@dimen/dp412"
                android:layout_height="@dimen/dp56"
                android:background="@color/white"
                android:text="@string/men"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/menCate1"
                android:layout_width="@dimen/dp288"
                android:layout_height="@dimen/dp291"
                android:background="@color/black"
                android:text="@string/jacket"
                app:layout_constraintEnd_toStartOf="@+id/menCate2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menBtn" />

            <Button
                android:id="@+id/menCate2"
                android:layout_width="@dimen/dp124"
                android:layout_height="@dimen/dp344"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:text="@string/pants"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/menCate1"
                app:layout_constraintTop_toBottomOf="@+id/menBtn" />

            <Button
                android:id="@+id/menCate3"
                android:layout_width="@dimen/dp124"
                android:layout_height="@dimen/dp248"
                android:background="@color/white"
                android:text="@string/t_shirt"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menCate1" />

            <Button
                android:id="@+id/menCate4"
                android:layout_width="@dimen/dp140"
                android:layout_height="@dimen/dp118"
                android:layout_marginStart="11dp"
                android:layout_marginEnd="@dimen/dp1"
                android:background="@color/black"
                android:text="@string/denim"
                app:layout_constraintBottom_toTopOf="@+id/menCate5"
                app:layout_constraintEnd_toStartOf="@+id/menCate2"
                app:layout_constraintStart_toEndOf="@+id/menCate3"
                app:layout_constraintTop_toBottomOf="@+id/menCate1" />

            <Button
                android:id="@+id/menCate5"
                android:layout_width="@dimen/dp140"
                android:layout_height="@dimen/dp130"
                android:layout_marginStart="12dp"
                android:background="@color/white"
                android:text="@string/coat"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/menCate6"
                app:layout_constraintStart_toEndOf="@+id/menCate3"
                app:layout_constraintTop_toBottomOf="@+id/menCate4" />

            <Button
                android:id="@+id/menCate6"
                android:layout_width="@dimen/dp124"
                android:layout_height="@dimen/dp192"
                android:layout_marginStart="@dimen/dp1"
                android:layout_marginTop="@dimen/dp1"
                android:background="@color/black"
                android:text="@string/sneaker"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/menCate4"
                app:layout_constraintTop_toBottomOf="@+id/menCate2" />

            <Button
                android:id="@+id/womanBtn"
                android:layout_width="@dimen/dp412"
                android:layout_height="@dimen/dp56"
                android:background="@color/black"
                android:text="@string/woman"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menCate3" />

            <Button
                android:id="@+id/wmanCate1"
                android:layout_width="@dimen/dp191"
                android:layout_height="@dimen/dp139"
                android:background="@color/white"
                android:text="@string/shirt"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/womanBtn" />

            <Button
                android:id="@+id/wmanCate2"
                android:layout_width="@dimen/dp114"
                android:layout_height="@dimen/dp207"
                android:background="@color/black"
                android:text="@string/t_shirt"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/wmanCate1"
                app:layout_constraintTop_toBottomOf="@+id/womanBtn" />

            <Button
                android:id="@+id/wmanCate3"
                android:layout_width="@dimen/dp94"
                android:layout_height="@dimen/dp77"
                android:layout_marginStart="@dimen/dp2"
                android:layout_marginEnd="@dimen/dp1"
                android:background="@color/white"
                android:text="@string/bag"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wmanCate2"
                app:layout_constraintTop_toBottomOf="@+id/womanBtn" />

            <Button
                android:id="@+id/wmanCate4"
                android:layout_width="@dimen/dp96"
                android:layout_height="@dimen/dp226"
                android:background="@color/black"
                android:text="@string/shoes"
                app:layout_constraintBottom_toTopOf="@+id/wmanCate7"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wmanCate3" />

            <Button
                android:id="@+id/wmanCate5"
                android:layout_width="@dimen/dp201"
                android:layout_height="@dimen/dp319"
                android:layout_marginTop="@dimen/dp2"
                android:background="@color/black"
                android:text="@string/pants"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wmanCate1" />

            <Button
                android:id="@+id/wmanCate6"
                android:layout_width="@dimen/dp115"
                android:layout_height="@dimen/dp86"
                android:layout_marginStart="@dimen/dp1"
                android:layout_marginEnd="@dimen/dp1"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@color/white"
                android:text="@string/jacket"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/wmanCate7"
                app:layout_constraintEnd_toStartOf="@+id/wmanCate4"
                app:layout_constraintStart_toEndOf="@+id/wmanCate5"
                app:layout_constraintTop_toBottomOf="@+id/wmanCate2" />

            <Button
                android:id="@+id/wmanCate7"
                android:layout_width="@dimen/dp208"
                android:layout_height="@dimen/dp164"
                android:layout_marginStart="@dimen/dp2"
                android:layout_marginBottom="@dimen/dp2"
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="@string/swimwear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/wmanCate5" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>